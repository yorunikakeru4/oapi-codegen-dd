{{define "server-main"}}
{{- $config := .Config -}}
{{- $server := .ServerOptions -}}
{{- /* Types prefix: when models-package-alias is set, types are in a separate package */ -}}
{{- $modelsAlias := $config.Generate.Handler.ModelsPackageAlias -}}
{{- $typesPrefix := "handler." -}}
{{- if $modelsAlias -}}
{{- $typesPrefix = printf "%s." $modelsAlias -}}
{{- end -}}
// Package main - This file is generated ONCE as a starting point and will NOT be overwritten.
// Modify it freely to customize your server setup.
// To regenerate, delete this file or set generate.handler.output.overwrite: true in config.
package main

import (
    "log"
    "time"

    "github.com/valyala/fasthttp"
    handler "{{ $server.HandlerPackage }}"
)

func main() {
    // Create your service implementation
    svc := handler.New{{ $config.Generate.Handler.Name }}()

    // Create the handler with middleware
    h := {{ $typesPrefix }}Handler(svc,
        {{ $typesPrefix }}WithMiddleware(handler.RecoveryMiddleware()),
        {{ $typesPrefix }}WithMiddleware(handler.RequestIDMiddleware()),
        {{ $typesPrefix }}WithMiddleware(handler.LoggingMiddleware()),
        {{ $typesPrefix }}WithMiddleware(handler.CORSMiddleware()),
        {{ $typesPrefix }}WithMiddleware(handler.TimeoutMiddleware({{ $server.Timeout }}*time.Second)),
        {{ $typesPrefix }}WithMiddleware(handler.ExampleMiddleware()),
    )

    // Create fasthttp server
    server := &fasthttp.Server{
        Handler:      h,
        ReadTimeout:  {{ $server.Timeout }} * time.Second,
        WriteTimeout: {{ $server.Timeout }} * time.Second,
    }

    log.Printf("Starting fasthttp server on :%d", {{ $server.Port }})
    if err := server.ListenAndServe(":{{ $server.Port }}"); err != nil {
        log.Fatal(err)
    }
}
{{end}}
{{template "server-main" .}}

